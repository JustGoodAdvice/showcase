<script id="tmpl_assumptionsList" type="text/x-handlebars-template">
	<p class="assumption-intro">Change assumptions and personalized recommendations will update.</p>
	{{#if _answersExist}}
		<div class="assumption-controls">
			<a href="#" data-expand="assumptions" data-collapsed="true">Expand groups</a> or <a id="pills-qa-tab" data-toggle="pill" href="#pills-qa" role="tab" aria-controls="pills-qa" aria-selected="false">view as answers</a>.
		</div>

		{{#if assumptions.ungrouped.length}}
		<ol class="assumptions-list">
			{{#each assumptions.ungrouped}}
				<li data-id="{{id}}" data-idx="{{idx}}" class="qa">
					{{#if statement}}
						<a href="#" class="statement">
							{{statement}}
						</a>
					{{else}}
						<span class="q">
							{{#if form.questionVariable}}
								<span class="text-monospace">{{form.questionVariable.name}}</span>&nbsp;&nbsp;&nbsp;
							{{else}}
								{{question}}
							{{/if}}
						</span>
						<span class="a"><a href="#" class="">
							{{#if answer}}
								{{answer}}
							{{else}}
								{{value}}
							{{/if}}
						</a></span>
					{{/if}}
				</li>
			{{/each}}
		</ol>
		{{/if}}

		{{#each assumptions}}
			{{#ifNotEquals @key "ungrouped"}}
				<div class="assumption-group"><a data-toggle="collapse" href="#collapse_{{@index}}" role="button" aria-expanded="false" aria-controls="collapse_{{@index}}"><i class="fal fa-chevron-{{#if this.0._isOpen}}down{{else}}right{{/if}}"></i> {{@key}}</a></div>
				<ol class="assumptions-list collapse {{#if this.0._isOpen}}show{{/if}}" id="collapse_{{@index}}">
					{{#each this}}
						<li data-id="{{id}}" data-group-id="{{tagGroup.id}}" data-idx="{{idx}}" class="qa">
							{{#if statement}}
								<a href="#" class="statement">
									{{statement}}
								</a>
							{{else}}
								<span class="q">
									{{#if form.questionVariable}}
										<span class="text-monospace">{{form.questionVariable.name}}</span>&nbsp;&nbsp;&nbsp;
									{{else}}
										{{question}}
									{{/if}}
								</span>
								<span class="a"><a href="#" class="">
									{{#if answer}}
										{{answer}}
									{{else}}
										{{value}}
									{{/if}}
								</a></span>
							{{/if}}
						</li>
					{{/each}}
				</ol>
			{{/ifNotEquals}}
		{{/each}}
	{{/if}}
</script>