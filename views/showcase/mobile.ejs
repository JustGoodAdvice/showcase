<!DOCTYPE html>
<html>
  <head>
		<%- include("_head"); %>
  </head>
  <body class="showcase showcase--advice showcase--advice_mobile">

		<header class="banner bg-stripes fixed-top">
			<div class="container">
				<img src="/img/logo_white.svg" height="28">
			</div>
		</header>
		
		<main class="container">
			<div class="row">
				<div class="col-md-6 mt-4">
					<div class="advice-set-details">Loading...</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<div class="mt-3">This is an alternative interface for this Advice rule.
						<ul class="list-unstyled mt-4 text-sm">
							<li class="py-1"><a href="../"><i class="fad fa-arrow-alt-circle-left"></i> Back to main view</a></li>
							<li class="py-1"><a href="#" class="ux-app" data-uxmode="app"><i class="fad fa-comment-lines"></i> Toggle style (app or virtual assistant)</a></li>
						</ul>
					</div>
				</div>
				<div class="col-md-8">
					<section class="phone">
						<section class="screenarea">
							<main class="screen">
								<header class="title">HEADER</header>
								<a class="action-assumptions" href="#" data-sheet="assumptions" data-toggle="tooltip" title="View assumptions"><i class="fal fa-clipboard-list-check"></i></a>
								<div class="answers-chat-bubbles"></div>
								<div class="advice"></div>
								<div class="list-all-recommendations"></div>
								<div id="sheet_assumptions" class="sheet screen-edge-padding">
									<header>
										<h6>Assumptions</h6>
										<a href="#" data-sheet="assumptions"><i class="fal fa-times"></i></a>
									</header>
									<div class="assumptions"></div>
								</div>
							</main>
							<footer class="tabbar">
								<a href="./?" data-toggle="tooltip" title="Reset"><i class="fad fa-home"></i></a>
								<a href="#"><i class="fad fa-dollar-sign"></i></a>
								<a href="#" class="center ux-app" data-uxmode="app" title="Toggle app style" data-toggle="tooltip"><i class="fad fa-comment-lines"></i></a>
								<a href="#"><i class="fad fa-user"></i></a>
								<a href="#"><i class="fad fa-cog"></i></a>
							</footer>
						
						</section>
					</section>
				</div>
			</div>
			<div class="push"></div>
		</main>

		<!--templates-->
<%- include("mobile/adviceSetDetails"); %>
<%- include("mobile/inputRequest"); %>
<%- include("mobile/recommendations"); %>
<%- include("mobile/assumptions"); %>
<%- include("mobile/answers-chatbubbles"); %>

		<%- include("_footer"); %>
		<%- include("_toast"); %>

		<script type="text/javascript">window.jga=window.jga||{};window.jga._isMobile=<%= locals.isMobile %>;window.jga.api={adviceset:{id: "<%= locals.adviceSetId %>"}};</script>
		<script src="/jquery/dist/jquery.min.js" type="text/javascript"></script>
		<script src="/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
		<script src="/dist/js/main.js" type="text/javascript"></script>
		<script>
			window.intercomSettings = {
				app_id: "<%= locals.INTERCOM_APP_ID %>",
				alignment: 'left'
			};
		</script>

		<script>
		(function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',w.intercomSettings);}else{var d=document;var i=function(){i.c(arguments);};i.q=[];i.c=function(args){i.q.push(args);};w.Intercom=i;var l=function(){var s=d.createElement('script');s.type='text/javascript';s.async=true;s.src='https://widget.intercom.io/widget/<%= locals.INTERCOM_APP_ID %>';var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);};if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})();
		</script>
  </body>
</html>
