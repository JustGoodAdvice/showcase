<script id="tmpl_user_selected_goals" type="text/x-handlebars-template">

  <h6 class="text-brand">Action Plan</h6>

  <div class="alert alert-secondary" role="alert">
    <p>
      Starting with <strong>{{startingCashF}}</strong> each month.
      <a href="/frb/v2/goal-planning/goals/taffrail/JUsIoPDhkNcvs1zb8UErR1I" class="small"><strong>Edit</strong></a>
    </p>
    <div class="d-flex justify-content-between align-items-center small mb-2">
      <div>Income<br><taffrail-var data-variable-name="Income_Monthly" data-variable-id="FVmBe_Lq6GtTzLLATmw0w">{{incomeF}}</taffrail-var></div>
      <div>Expenses<br><taffrail-var data-variable-name="Expenses_Monthly" data-variable-id="M8oBftg_e_qeY8b7mJ7EI">{{expensesF}}</taffrail-var></div>
      <div>Towards Goals<br>{{costOfGoalsF}} ({{percentAllocatedF}})</div>
      <div>Available<br><span class="text-{{#if positiveAvailableCash}}success{{else}}danger{{/if}}"><strong>{{availableCashF}}</strong></span></div>
    </div>
  </div>

  {{#unless goals}}
    <p class="small">You have no goals saved.</p>
  {{/unless}}
  {{#if goals}}
  <div class="accordion" id="accordionExample">
    {{#each goals}}
      <div class="card mb-1">
        <div class="card-header" id="heading_{{this.id}}">
          <h2 class="mb-0">
            <a href="#" class="btn btn-block text-left btn-sm text-uppercase text-secondary" data-toggle="collapse" data-target="#collapse_{{this.id}}"
              aria-expanded="true" aria-controls="collapse_{{this.id}}">
              <div class="d-flex justify-content-between align-items-center">
                <div>{{this.name}}</div>
                <i class="fal fa-chevron-down"></i>
              </div>
            </a>
            <div class="goal-headline goal-headline-user">
              <div class="badge badge-secondary" style="font-size:.75rem">User-created</div>
              <div class="headline">
                {{{this.headline.headline_html}}}
              </div>
            </div>
            {{#if this.headline_optimized.headline_html}}
            <div class="goal-headline goal-headline-optimized">
              <div class="badge badge-success" style="font-size:.75rem">Optimized</div>
              <div class="headline">
                {{{this.headline_optimized.headline_html}}}
              </div>
            </div>
            {{/if}}
          </h2>
        </div>
    
        <div id="collapse_{{this.id}}" class="collapse" aria-labelledby="heading_{{this.id}}" data-parent="#accordionExample">
          <div class="card-body">
            <h6>Reaching your goal 
              
              {{#if this.headline_optimized.headline_html}}
                <span class="badge badge-success reaching-your-goal-optimized" style="font-size:.75rem">Optimized</span>
              {{/if}}
              </h6>
            <ul>
            {{#each this.data.display}}
              <li>
                {{#if this.headline_html}}
                {{{this.headline_html}}}
                {{else}}
                {{this.headline}}
                {{/if}}
              </li>
            {{/each}}
            </ul>

            <div class="btns" data-turbolinks="false">
              <a class="btn btn-sm btn-outline-primary" href="/frb/v2/goal-planning/goals/taffrail/{{this.data.adviceset.id}}?{{this.data.paramsAsQueryStr}}" role="button"><i class="fal fa-pencil-ruler"></i> Edit Goal</a>
              <a class="btn btn-sm btn-outline-danger" href="#" role="button" data-action="delete-goal" data-id="{{this.id}}"><i class="fal fa-trash"></i> Delete</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  {{#if showOptimizeButton}}
      <p class="mt-1 mb-1"><a href="#" class="btn btn-block btn-primary text-brand" data-action="optimize-goals">Optimize</a></p>
  {{/if}}

  {{/if}}
</script>
