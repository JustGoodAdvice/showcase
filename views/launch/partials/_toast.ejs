<script id="tmpl_toast" type="text/x-handlebars-template">
	<div class="toast fade" role="alert" aria-live="assertive" aria-atomic="true" id="{{id}}">
		<div class="toast-header">
      <img src="/img/Taffrail_LifeRing_NoWaves_Navy@2x.png" width="20" class="rounded me-2" alt="...">
			<strong class="me-auto">{{{title}}}</strong>
			{{#if time}}<small>{{time}}</small>{{/if}}
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
		<div class="toast-body">
			{{{message}}}
		</div>
	</div>
</script>

<div aria-live="polite" aria-atomic="true" id="toastWrapper">
	<div id="toastContainer"></div>
</div>
