<script id="tmpl_user_selected_goals" type="text/x-handlebars-template">
  {{#if goals}}
  <h5 class="text-brand">Action Plan</h5>

  <div class="alert alert-secondary" role="alert">
    <p>
      Starting with <strong>{{startingCashF}}</strong> each month.
      <a href="/frb/goal-planning/goals/taffrail/JUIsuPtqv04OaFlrmVCZd0H" class="small"><strong>Edit</strong></a>
    </p>
    <div class="d-flex justify-content-between align-items-center small mb-2">
      <div>Income<br>{{incomeF}}</div>
      <div>Expenses<br>{{expensesF}}</div>
      <div>Towards Goals<br>{{costOfGoalsF}} ({{percentAllocatedF}})</div>
      <div>Available<br><span class="text-{{#if positiveAvailableCash}}success{{else}}danger{{/if}}"><strong>{{availableCashF}}</strong></span></div>
    </div>
  </div>

  <div class="accordion" id="accordionExample">
    {{#each goals}}
      
      <div class="card mb-1">
        <div class="card-header" id="heading_{{this.id}}">
          <h2 class="mb-0">
            <button class="btn btn-link btn-block text-left btn-sm text-uppercase" type="button" data-toggle="collapse" data-target="#collapse_{{this.id}}"
              aria-expanded="true" aria-controls="collapse_{{this.id}}">
              {{this.name}}
            </button>
          </h2>
        </div>
    
        <div id="collapse_{{this.id}}" class="collapse" aria-labelledby="heading_{{this.id}}" data-parent="#accordionExample">
          <div class="card-body">
            {{#each this.data.display}}
            <p>
                {{#if this.headline_html}}
                {{{this.headline_html}}}
                {{else}}
                {{this.headline}}
                {{/if}}
              </p>
              {{#if this.summary}}
              <p class="small">
                {{#if this.summary_html}}
                {{{this.summary_html}}}
                {{else}}
                {{this.summary}}
                {{/if}}
              </p>
              {{/if}}

            {{/each}}
            <p>
              <a href="/frb/goal-planning/goals/taffrail/{{this.data.adviceset.id}}?{{this.data.paramsAsQueryStr}}"><i class="fal fa-pencil-ruler"></i> Edit Goal</a> | <a href="#" data-action="delete-goal" data-id="{{this.id}}"><i
                  class="fal fa-trash"></i> Delete</a></p>
          </div>
        </div>
      </div>
    {{/each}}

  {{/if}}
</script>
