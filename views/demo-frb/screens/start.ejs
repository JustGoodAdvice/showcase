<script id="tmpl_user_selected_goals" type="text/x-handlebars-template">
  
  <h6 class="text-brand">Action Plan</h6>

  <div class="alert alert-secondary" role="alert">
    <p>
      Starting with <strong>{{startingCashF}}</strong> each month.
      <a href="/frb/goal-planning/goals/taffrail/JUsIoPDhkNcvs1zb8UErR1I" class="small"><strong>Edit</strong></a>
    </p>
    <div class="d-flex justify-content-between align-items-center small mb-2">
      <div>Income<br>{{incomeF}}</div>
      <div>Expenses<br>{{expensesF}}</div>
      <div>Towards Goals<br>{{costOfGoalsF}} ({{percentAllocatedF}})</div>
      <div>Available<br><span class="text-{{#if positiveAvailableCash}}success{{else}}danger{{/if}}"><strong>{{availableCashF}}</strong></span></div>
    </div>
  </div>

  {{#unless goals}}
    <p class="small">You have no goals saved.</p>
  {{/unless}}
  {{#if goals}}
  <div class="accordion" id="accordionExample">
    {{#each goals}}
      
      <div class="card mb-1">
        <div class="card-header" id="heading_{{this.id}}">
          <h2 class="mb-0">
            <a href="#" class="btn btn-block text-left btn-sm text-uppercase text-secondary" data-toggle="collapse" data-target="#collapse_{{this.id}}"
              aria-expanded="true" aria-controls="collapse_{{this.id}}">
              <div class="d-flex justify-content-between align-items-center">
                <div>{{this.name}}</div>
                <i class="fal fa-chevron-down"></i>
              </div>
            </a>
            <p class="card-header-summary">{{{this.headline.headline_html}}}</p>
          </h2>
        </div>
    
        <div id="collapse_{{this.id}}" class="collapse" aria-labelledby="heading_{{this.id}}" data-parent="#accordionExample">
          <div class="card-body">
            {{#each this.data.display}}
            <p>
                {{#if this.headline_html}}
                {{{this.headline_html}}}
                {{else}}
                {{this.headline}}
                {{/if}}
              </p>
              {{#if this.summary}}
              <p class="small">
                {{#if this.summary_html}}
                {{{this.summary_html}}}
                {{else}}
                {{this.summary}}
                {{/if}}
              </p>
              {{/if}}

            {{/each}}

            <div class="btns">
              <a class="btn btn-sm btn-outline-primary" href="/frb/goal-planning/goals/taffrail/{{this.data.adviceset.id}}?{{this.data.paramsAsQueryStr}}" role="button"><i class="fal fa-pencil-ruler"></i> Edit Goal</a>
              <a class="btn btn-sm btn-outline-danger" href="#" role="button" data-action="delete-goal" data-id="{{this.id}}"><i class="fal fa-trash"></i> Delete</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  {{/if}}
</script>
